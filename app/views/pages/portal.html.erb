<div class="container" id="portal">
	<h1>My Portal</h1>
</div>
<div class="container">
	<div class="wrapper">
  	<h3 class="title">My Leagues</h3>
	  
	  <div id="myleagues">
	  	<table class="table table-striped">

	  		<thead>
			  	<tr>
			  		<th>Name</th>
			  		<th>Begins</th>
			  		<th>Status</th>
			  		<th>Teams</th>
			  	</tr>
			  </thead>
			  <tbody>
			  	<% @my_leagues.each do |l| %>
			  	<tr class=<%=
			  								if l.status == "open"
			  										"success"
			  								elsif l.status == "full"
			  										"warning"
			  								else
			  										"info"
			  							 	end 
			  						%> >
			  		<td><%= l.name %></td>
			  		<td><%= l.begin_date.strftime("%b %d, %Y") %></td>
			  		<td><%= l.status %></td>
			  		<td>0 / <%= l.max_teams %></td>
			  	</tr>
			  	<% end %>
			  </tbody>
		  </table>
	  </div>
	</div>  
	<div class="row">
	  <div class="col-md-6">
	  	<h3 class="title">Teams</h3>
	  	<table class="table table-striped">
	  		<thead>
			  	<tr>
			  		<th>Name</th>
			  		<th>Players</th>
			  	</tr>
			  </thead>
			  <tbody>
			  	<% @my_teams.each do |t| %>	
			  		<tr>
			  			<td><%= t.team_name %><td>
			  			<td>0</td>
			  		</tr>
			  	<% end %>
			  </tbody>
	  	</table>
	  </div>
	  <div class="col-md-6">
	  	<h3 class="title">Players</h3>
	  </div>
	</div>
</div>