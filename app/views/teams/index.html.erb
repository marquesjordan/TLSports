<div class="spacer"></div>
<!-- <div id="map-canvas"></div> -->
	<%if current_user %>
		<%= link_to "Create New Team", new_team_path %>
	<% else %>
		<h4><%= link_to "Sign-In", new_user_session_path %> to create a new team</h4>
	<% end %>
	<div class="wrapper">
  	<h3 class="title">All Teams</h3>
	  
	  <div id="myleagues">
	  	<table class="table table-striped">

	  		<thead>
			  	<tr>
			  		<th>Name</th>
			  		<th>Contact</th>
			  		<th>Phone</th>
			  		<th>Email</th>
			  	</tr>
			  </thead>
			  <tbody>
			  	<% @teams.each do |t| %>
			  	<tr onclick="document.location = '../teams/' + <%=t.id%>;" id="trigger" >
			  		<td><%= t.team_name %></td>
			  		<td><%= t.team_contact %></td>
			  		<td><%= t.team_phone %></td>
			  		<td><%= t.team_email %></td>
			  	</tr>
			  	<% end %>
			  </tbody>
		  </table>

	  </div>
	</div>  

</div>


