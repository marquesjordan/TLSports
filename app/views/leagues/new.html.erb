<div class="contianer">
  <div class="form_page">
    <h1>Register a new league</h1>

    <%= form_for @league, url: {action: "create"} do |f| %>

    	<label>Name: </label><%= f.text_field :name, class: "form-control" %><br>
    	<label>Organizer: </label><%= f.text_field :organizer, class: "form-control" %><br>
    	<label>Organization: </label><%= f.text_field :orginazation, class: "form-control" %><br>
    	<label>Description:</label> <%= f.text_area :orginazation, class: "form-control" %><br>
      <div class="form-group">
          <label>Start Date</label>
          <%= f.date_select :begin_date, class: "form-control" %>
      </div>  
      <div class="form-group">
          <label>End Date</label>
          <%= f.date_select :end_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create League" %>
      </div>
    <% end %>

  </div>
</div>

