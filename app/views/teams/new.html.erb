<div class="contianer">
  <div class="form_page">
    <h1>Register a new team</h1>

    <%= form_for @team, url: {action: "create"} do |f| %>

    	<label>Name: </label><%= f.text_field :team_name, class: "form-control" %><br>
    	<label>Team Slogan: </label><%= f.text_field :slogan, class: "form-control" %><br>
    	<label>Team Contact: </label><%= f.text_field :team_contact, class: "form-control" %><br>
    	<label>Phone#:</label> <%= f.text_field :team_phone, class: "form-control" %><br>
    	<label>Email:</label> <%= f.text_field :team_email, class: "form-control" %><br>
      <div class="form-group">
        <%= f.submit "Create Team" %>
      </div>
    <% end %>

  </div>
</div>
